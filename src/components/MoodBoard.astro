---
interface ImageItem {
  type: "image";
  src: string;
  caption?: string;
}

interface LinkItem {
  type: "link";
  url: string;
  title: string;
}

type MoodBoardItem = ImageItem | LinkItem;

interface Props {
  items: MoodBoardItem[];
}

const { items } = Astro.props;
---

<div class="moodboard">
  {items.map((item) =>
    item.type === "image" ? (
      <figure class="moodboard-image">
        <img src={item.src} alt={item.caption || ""} loading="lazy" />
        {item.caption && <figcaption>{item.caption}</figcaption>}
      </figure>
    ) : (
      <a class="moodboard-link" href={item.url} target="_blank" rel="noopener noreferrer">
        <span class="link-icon">&#x1F517;</span>
        <span class="link-title">{item.title}</span>
      </a>
    )
  )}
</div>

<style>
  .moodboard {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 0.75rem;
    margin: 1rem 0;
  }

  .moodboard-image {
    margin: 0;
    border-radius: 6px;
    overflow: hidden;
    background: #f0f0f0;
  }

  .moodboard-image img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    display: block;
  }

  .moodboard-image figcaption {
    padding: 0.35rem 0.5rem;
    font-size: 0.75rem;
    color: #666;
  }

  .moodboard-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem 0.75rem;
    border: 1px dashed #ccc;
    border-radius: 6px;
    text-decoration: none;
    color: #333;
    font-size: 0.8rem;
    text-align: center;
    min-height: 120px;
    transition: border-color 0.2s, background 0.2s;
  }

  .moodboard-link:hover {
    border-color: #888;
    background: #fafafa;
  }

  .link-icon {
    font-size: 1.5rem;
    margin-bottom: 0.4rem;
  }

  .link-title {
    line-height: 1.3;
  }
</style>
